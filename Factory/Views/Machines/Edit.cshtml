@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h1>Edit</h1>
<hr>
<h3>Edit this Machine: @Html.DisplayFor(model => model.MachineName)</h3>
<hr>
@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.HiddenFor(model => model.MachineId)
    @Html.LabelFor(model => model.MachineName)
    @Html.TextBoxFor(model => model.MachineName, new {@class="form-control"})
  </div>
  <input type="submit" value="Save" class="btn btn-outline-dark" />
}
<p>@Html.ActionLink("Back to Machines list", "Index")</p>