@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>;

<h1>Machines</h1>
<hr>
@if (@Model.Count == 0)
{
  <h3>No Machines have been added yet!</h3>
} 

@foreach (Machine machine in Model)
{
  <h5>@Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineId })</h5>
}
<hr>
<h5>@Html.ActionLink("Add new Machine", "Create")</h5>
<h5>@Html.ActionLink("Home", "Index", "Home")</h5>