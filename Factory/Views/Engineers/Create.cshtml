@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h3>Add a new Engineer</h3>
<hr/>
@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new {@class="form-control"})
    @Html.Label("Select Machine")
    @Html.DropDownList("MachineId", null, new {@class="form-control"})
  </div>
  <input type="submit" value="Add new Engineer" class="btn btn-outline-dark"/>
}
<hr/>
<h5>@Html.ActionLink("Show all Engineers", "Index")</h5>