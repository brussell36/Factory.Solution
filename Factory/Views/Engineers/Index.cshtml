@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h1>Engineers</h1> 

@if (@Model.Count == 0)
{
  <h3>No Engineers have been added yet!</h3>
}

<ul>
@foreach (Engineer engineer in Model)
{
  <h3>@Html.ActionLink($"{engineer.Name}","Details", new { id = engineer.EngineerId})</h3>
}
</ul>

<h5>@Html.ActionLink("Add new Engineer", "Create")</h5>
<h5>@Html.ActionLink("Home", "Index", "Home")</h5>